<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Lucid Chart API Settings</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
  <%- include('./partials/header.ejs') %>
  <div class="container mt-4">
    <h1>Lucid Chart API Settings</h1>
    <form action="/settings/lucid" method="POST">
      <div class="mb-3">
        <label class="form-label">API URL</label>
        <input type="url" class="form-control" name="lucid_api_url" value="<%= settings['lucid.api_url'] || '' %>" placeholder="Enter your Lucid Chart API URL">
      </div>
      <div class="mb-3">
        <label class="form-label">API Key</label>
        <div class="input-group">
          <input type="password" class="form-control" name="lucid_api_key" id="lucidApiKey" value="<%= settings['lucid.api_key'] || '' %>" placeholder="Enter your Lucid Chart API key">
          <button class="btn btn-outline-secondary" type="button" onclick="toggleApiKey('lucidApiKey', this)"><i class="bi bi-eye"></i></button>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <% if (message) { %>
      <div class="alert alert-<%= message.type %> mt-3"> <%= message.text %> </div>
    <% } %>
  </div>
  <script>
    function toggleApiKey(inputId, btn) {
      const input = document.getElementById(inputId);
      if (input.type === 'password') {
        input.type = 'text';
        btn.innerHTML = '<i class="bi bi-eye-slash"></i>';
      } else {
        input.type = 'password';
        btn.innerHTML = '<i class="bi bi-eye"></i>';
      }
    }
  </script>
</body>
</html>
