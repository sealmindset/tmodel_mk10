<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Threat Model Generator</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/public/css/style.css">

    <style>
        .generator-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .template-card {
            cursor: pointer;
            transition: all 0.2s ease;
            height: 100%;
        }
        .template-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .template-card.selected {
            border-color: #0d6efd;
            background-color: rgba(13, 110, 253, 0.05);
        }
        .form-section {
            margin-bottom: 2rem;
        }
        .template-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
        }
        .generator-footer {
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Threat Model Generator</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/projects">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/reports">Reports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/settings">Settings</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="nav-link text-light">
                            <i class="fas fa-user"></i> <%= user.username %>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4 generator-container">
        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-between align-items-center">
                    <h1>Generate Report</h1>
                    <div>
                        <a href="/reports" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Reports
                        </a>
                    </div>
                </div>
                <hr>
            </div>
        </div>
        
        <!-- Project Info -->
        <div class="row mb-4">
            <div class="col">
                <div class="alert alert-info">
                    <h4 class="alert-heading">Project: <span id="project-name">Loading...</span></h4>
                    <p id="project-description">Loading project details...</p>
                </div>
            </div>
        </div>
        
        <form id="report-generator-form">
            <!-- Template Selection -->
            <div class="form-section">
                <h3>1. Select Report Template</h3>
                <div class="row" id="templates-container">
                    <div class="col-12 mb-3">
                        <div class="d-flex justify-content-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading templates...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- LLM Options -->
            <div class="form-section">
                <h3>2. Select LLM Provider</h3>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="llm-provider" id="provider-openai" value="openai" checked>
                                    <label class="form-check-label" for="provider-openai">
                                        <h5><i class="fas fa-robot"></i> OpenAI</h5>
                                        <p class="text-muted">Use OpenAI models for report generation (recommended for highest quality)</p>
                                    </label>
                                </div>
                                
                                <!-- OpenAI Model Selection (shown when OpenAI is selected) -->
                                <div id="openai-models" class="mt-3">
                                    <label for="openai-model" class="form-label">Model:</label>
                                    <select class="form-select" id="openai-model" name="openai-model">
                                        <option value="gpt-4" selected>GPT-4 (Best quality, slower)</option>
                                        <option value="gpt-3.5-turbo">GPT-3.5 Turbo (Faster, good quality)</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="llm-provider" id="provider-ollama" value="ollama">
                                    <label class="form-check-label" for="provider-ollama">
                                        <h5><i class="fas fa-server"></i> Ollama (Local)</h5>
                                        <p class="text-muted">Use locally hosted Ollama models (more privacy, may have lower quality)</p>
                                    </label>
                                </div>
                                
                                <!-- Ollama Model Selection (hidden by default) -->
                                <div id="ollama-models" class="mt-3 d-none">
                                    <label for="ollama-model" class="form-label">Model:</label>
                                    <select class="form-select" id="ollama-model" name="ollama-model">
                                        <option value="llama3" selected>Llama 3</option>
                                        <option value="mixtral">Mixtral</option>
                                        <option value="mistral">Mistral</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Report Options -->
            <div class="form-section">
                <h3>3. Report Options</h3>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="report-title" class="form-label">Report Title:</label>
                            <input type="text" class="form-control" id="report-title" name="report-title" placeholder="Security Assessment Report">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="report-sections" class="form-label">Include Sections:</label>
                            <div id="report-sections">
                                <!-- Section checkboxes will be populated by templates -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Submit Button -->
            <div class="generator-footer">
                <div class="d-flex justify-content-between">
                    <button type="button" id="btn-back-to-reports" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </button>
                    <button type="submit" id="btn-generate-report" class="btn btn-primary">
                        <i class="fas fa-cogs"></i> Generate Report
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Templates and Sections definition in hidden JSON -->
    <script type="application/json" id="report-templates-data">
        [
            {
                "id": 1,
                "name": "Standard Security Report",
                "description": "A comprehensive security report covering key threats, vulnerabilities, and mitigations",
                "icon": "fa-file-lines",
                "sections": [
                    { "id": "overview", "name": "Executive Overview", "default": true },
                    { "id": "threats", "name": "Key Threats", "default": true },
                    { "id": "vulnerabilities", "name": "Vulnerabilities", "default": true },
                    { "id": "mitigations", "name": "Mitigations", "default": true },
                    { "id": "recommendations", "name": "Recommendations", "default": true },
                    { "id": "appendix", "name": "Appendix: All Threats", "default": false }
                ]
            },
            {
                "id": 2,
                "name": "Executive Summary",
                "description": "A brief overview for management with high-level findings and recommendations",
                "icon": "fa-file-alt",
                "sections": [
                    { "id": "overview", "name": "Executive Overview", "default": true },
                    { "id": "key_findings", "name": "Key Findings", "default": true },
                    { "id": "recommendations", "name": "Recommendations", "default": true }
                ]
            },
            {
                "id": 3,
                "name": "Technical Assessment",
                "description": "Detailed technical analysis with in-depth threat and mitigation details",
                "icon": "fa-file-code",
                "sections": [
                    { "id": "overview", "name": "Executive Overview", "default": true },
                    { "id": "threats", "name": "Threats Analysis", "default": true },
                    { "id": "vulnerabilities", "name": "Vulnerabilities Assessment", "default": true },
                    { "id": "tech_details", "name": "Technical Details", "default": true },
                    { "id": "mitigations", "name": "Mitigations", "default": true },
                    { "id": "recommendations", "name": "Recommendations", "default": true },
                    { "id": "appendix", "name": "Appendix: All Threats", "default": true }
                ]
            }
        ]
    </script>
    
    <!-- Bootstrap and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Report Generator Script -->
    <script src="/public/js/report-generator.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const projectId = "<%= projectId %>";
            initReportGenerator(projectId);
        });
    </script>
</body>
</html>
