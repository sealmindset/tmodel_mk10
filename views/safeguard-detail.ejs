<%- include('partials/header', { pageTitle: 'Safeguard Details', active: 'safeguards' }) %>

<div class="container mt-4">
  <h1 class="mb-4">Safeguard Details</h1>
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title mb-3"><%= safeguard.name %></h5>
      <p class="card-text"><strong>Type:</strong> <%= safeguard.type %></p>
      <p class="card-text"><strong>Description:</strong> <%= safeguard.description %></p>
      <p class="card-text"><strong>Reusable:</strong> <%= safeguard.reusable ? 'Yes' : 'No' %></p>
      <% if (safeguard.createdAt) { %>
        <p class="card-text"><strong>Created:</strong> <%= safeguard.createdAt.toLocaleString() %></p>
      <% } %>
    </div>
  </div>
  <a href="/safeguards/<%= safeguard.id %>/edit" class="btn btn-warning">Edit</a>
  <a href="/safeguards" class="btn btn-secondary ms-2">Back to List</a>
</div>

<%- include('partials/footer') %>
