<%- include('partials/header', { pageTitle: 'Create Component', active: 'components' }) %>

<div class="container mt-4">
  <h1>Create New Component</h1>
  <form id="componentForm" action="/components" method="POST" class="needs-validation mt-4" novalidate>
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea class="form-control" id="description" name="description" rows="3"></textarea>
    </div>
    <div class="mb-3">
      <label for="type" class="form-label">Type</label>
      <input type="text" class="form-control" id="type" name="type">
    </div>
    <div class="mb-3 form-check">
      <input type="checkbox" class="form-check-input" id="is_reusable" name="is_reusable">
      <label class="form-check-label" for="is_reusable">Reusable</label>
    </div>
    <button type="submit" class="btn btn-primary">Create Component</button>
    <a href="/components" class="btn btn-secondary ms-2">Cancel</a>
  </form>
</div>

<!-- Load form utilities -->
<script src="/js/utils/forms.js"></script>
<script src="/js/component-new.js"></script>

<%- include('partials/footer') %>
